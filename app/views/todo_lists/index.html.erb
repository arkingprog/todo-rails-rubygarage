<div class="row">
  <div class="col-md-8 col-md-offset-2" id="todo_lists">
    <%	 @todo_lists.each do |todo_list| %>
          <%= render todo_list%>
    <%	end  %>

  </div>
</div>
<div class="row">
  <div class="col-md-offset-5 text-center col-md-1">
  <button class="btn btn-primary" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-plus"></span> New project</button>
  </div>
</div>

<div class="modal fade " id="myModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_for TodoList.new, remote: true,class: "form", role:"form" do |f| %>
          <div class="modal-body">
    <div class="form-group">
              <%= f.label :title %><br>
              <%= f.text_field :title ,value: "", style: "width: 100%" %>
            </div>
          </div>
            <div class="modal-footer">
              <%= f.button type: 'submit' ,class: "btn btn-default" %>
            </div>

<% end %>
</div>
  </div>
</div>


