<!DOCTYPE html>
<html>
<head>
  <title>Todo</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel="stylesheet" type="text/css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  <!-- Latest compiled and minified CSS -->

</head>
<body>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container-fluid">
    <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to current_user.name, edit_user_registration_path, :class => '' %>
          </li>
          <li>
            <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => ''  %>
          </li>
        </ul>
    <% else %>
        <ul class="nav navbar-nav navbar-right">
          <li>
            <%= link_to "Sign up", new_user_registration_path, :class => ''  %>
          </li>
          <li>
            <%= link_to "Login", new_user_session_path, :class => ''  %>
          </li>
        </ul>
    <% end %>
  </div>
</nav>
<div class="container">
    <%= yield %>
</div>
</body>
</html>
